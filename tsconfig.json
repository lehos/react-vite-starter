{
  "compilerOptions": {
    "types": ["vite/client", "node"],
    "esModuleInterop": false,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node"
  },
  "include": ["./src"],
}


